    <!-- header-->
    <header>
      <div class="header-area ">
        <div id="sticky-header" class="main-header-area">
          <div class="container">
            <div class="row align-items-center">
              <div class="col-xl-3 col-lg-3">
                <div class="logo-img">
                  <a href="index.html">
                    <img src="{{ base_url }}/akbar/img/logo.png" alt="">
                  </a>
                </div>
              </div>
              <div class="col-xl-9 col-lg-9">
                <div class="main-menu  d-none d-lg-block">
                  <nav>
                    <ul id="navigation">
                      <li>
                        <a class="active" href="{{ current_url }}">home</a>
                      </li>
                    </ul>
                  </nav>
                </div>
              </div>
              <div class="col-12">
                <div class="mobile_menu d-block d-lg-none"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!--/ header-->

    <!-- slider_area -->
    <div class="slider_area ">
      <div class="slider_area_inner slider_bg_1 overlay2">
        <div class="slider_text text-center">
          <div class="text_inner">
            <img src="{{ base_url }}/akbar/img/banner/ornaments.png" alt="">
            <h4>{{ date_readable }}</h4>
            <h3>{{ title|safe }}</h3>
            <span>Get Married</span>
          </div>
        </div>
      </div>
    </div>
    <!--/ slider_area -->

    <!-- wedding_countdown -->
    <div class="weeding_countdown_area">
      <div class="flowaers_top d-none d-lg-block">
        <img src="{{ base_url }}/akbar/img/banner/flower-top.png" alt="">
      </div>
      <div class="flowaers_bottom d-none d-lg-block">
        <img src="{{ base_url }}/akbar/img/banner/flower-bottom.png" alt="">
      </div>
      <div class="container">
        <div class="row">
          <div class="col-xl-12">
            <div class="section_title text-center">
              <img src="{{ base_url }}/akbar/img/banner/flowers.png" alt="">
              <span>{{ date_readable }}</span>
              <h3>THE WEDDING Countdown</h3>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-12">
            <div id="clock" class="countdown_area counter_bg "></div>
          </div>
        </div>
      </div>
    </div>
    <!--/ wedding_countdown -->

    <!-- our_love-story -->
    <div class="love_story_area">
      <div class="container">
        <div class="row">
          <div class="col-xl-12">
            <div class="section_title text-center">
              <img src="{{ base_url }}/akbar/img/banner/flowers.png" alt="">
              <h3>Our Love Story</h3>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xl-4 col-md-6 col-lg-4">
            <div class="single_lover_story text-center">
              <div class="story_thumb">
                <img src="{{ base_url }}/akbar/img/story/1.png" alt="">
              </div>
              <span>{{ groom.title }}</span>
              <h3>{{ groom.fullname }}</h3>
              <p>{{ groom.parent_description }}</p>
              <div class="social_links">
                <ul>
                  <li>
                    <a href="{{ groom.instagram_url }}" target="_blank">
                      <i class="fa fa-instagram"></i>
                    </a>
                    {{ groom.instagram_username }}
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-xl-4 col-md-6 col-lg-4">
            <div class="weding_time_line text-center">
              <div class="single_time_line">
                <h3>Fast Meet</h3>
                <p>Many variations of passages of Lorem Ipsum available, but the majority have suffered
                                alteration in some.</p>
              </div>
              <div class="single_time_line">
                <h3>He Proposed</h3>
                <p>Many variations of passages of Lorem Ipsum available, but the majority have suffered
                                alteration in some.</p>
              </div>
              <div class="single_time_line">
                <h3>Love Story</h3>
                <p>Many variations of passages of Lorem Ipsum available, but the majority have suffered
                                alteration in some.</p>
              </div>
              <div class="single_time_line">
                <h3>Wedding Day</h3>
              </div>
            </div>
          </div>
          <div class="col-xl-4 col-lg-4">
            <div class="single_lover_story text-center">
              <div class="story_thumb">
                <img src="{{ base_url }}/akbar/img/story/2.png" alt="">
              </div>
              <span>{{ bride.title }}</span>
              <h3>{{ bride.fullname }}</h3>
              <p>{{ bride.parent_description }}</p>
              <div class="social_links">
                <ul>
                  <li>
                    <a href="{{ bride.instagram_url }}" target="_blank">
                      <i class="fa fa-instagram"></i>
                    </a>
                    {{ bride.instagram_username }}
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--/ our_love-story -->

    <!-- gallery_area  -->
    <div class="gallery_area">
      <div class="container">
        <div class="row">
          <div class="col-xl-12">
            <div class="section_title text-center">
              <img src="{{ base_url }}/akbar/img/banner/flowers.png" alt="">
              <h3>Gallery Photos</h3>
            </div>
          </div>
        </div>
      </div>
      <div class="container-fluid p-0">
        <div class="row grid no-gutters">
          <div class="col-xl-4 col-md-6 col-lg-6 grid-item">
            <div class="single_gallery gallery_imag_1">
              <a class="popup-image" href="{{ base_url }}/akbar/img/gallery/1.png"></a>
            </div>
          </div>
          <div class="col-xl-3 col-md-6 col-lg-6 grid-item">
            <div class="single_gallery gallery_imag_2">
              <a class="popup-image" href="{{ base_url }}/akbar/img/gallery/2.png"></a>
            </div>
          </div>
          <div class="col-xl-5 col-md-6 col-lg-6 grid-item">
            <div class="single_gallery gallery_imag_3">
              <a class="popup-image" href="{{ base_url }}/akbar/img/gallery/3.png"></a>
            </div>
          </div>
          <div class="col-xl-3 col-md-6 col-lg-6 grid-item">
            <div class="single_gallery gallery_imag_4">
              <a class="popup-image" href="{{ base_url }}/akbar/img/gallery/4.png"></a>
            </div>
          </div>
          <div class="col-xl-5 col-md-6 col-lg-6 grid-item">
            <div class="single_gallery gallery_imag_5">
              <a class="popup-image" href="{{ base_url }}/akbar/img/gallery/5.png"></a>
            </div>
          </div>
          <div class="col-xl-4 col-md-6 col-lg-6 grid-item">
            <div class="single_gallery gallery_imag_6">
              <a class="popup-image" href="{{ base_url }}/akbar/img/gallery/6.png"></a>
            </div>
          </div>
          <div class="col-xl-4 col-md-6 col-lg-6 grid-item">
            <div class="single_gallery gallery_imag_7">
              <a class="popup-image" href="{{ base_url }}/akbar/img/gallery/7.png"></a>
            </div>
          </div>
          <div class="col-xl-3 col-md-6 col-lg-6 grid-item">
            <div class="single_gallery gallery_imag_8">
              <a class="popup-image" href="{{ base_url }}/akbar/img/gallery/8.png"></a>
            </div>
          </div>
          <div class="col-xl-5 col-md-6 col-lg-6 grid-item">
            <div class="single_gallery gallery_imag_9">
              <a class="popup-image" href="{{ base_url }}/akbar/img/gallery/9.png"></a>
            </div>
          </div>
        </div>
        {#
        <div class="grid row">
          <div class="single_image grid-item">
            <img src="{{ base_url }}/akbar/img/gallery/1.png" alt="">
          </div>
          <div class="single_image grid-item">
            <img src="{{ base_url }}/akbar/img/gallery/2.png" alt="">
          </div>
          <div class="single_image grid-item">
            <img src="{{ base_url }}/akbar/img/gallery/3.png" alt="">
          </div>
        </div>
        #}

      </div>
    </div>
    <!--/ gallery_area  -->

    <!-- program_details -->
    <div class="program_details_area">
      <div class="container">
        <div class="row">
          <div class="col-xl-12">
            <div class="section_title text-center">
              <img src="{{ base_url }}/akbar/img/banner/flowers.png" alt="">
              <h3>Program Details</h3>
            </div>
          </div>
        </div>
        <div class="row">
          {% for detail in details %}
            <div class="col-xl-4 col-lg-4">
              <div class="single_program program_bg_1 text-center">
                <div class="program_inner ">
                  <span>{{ detail.date_readable }}</span>
                  <br>
                  <span style="font-size: 18px;">{{ detail.time_readable }}</span>
                  <h3>{{ detail.name }}</h3>
                  <p>{{ detail.description }}</p>
                  <img src="{{ base_url }}/akbar/img/program_details/ornaments.png" alt="">
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    <!--/ program_details -->

    <!-- attend_area -->
    <div class="attending_area">
      <div class="container">
        <div class="row">
          <div class="col-xl-10 offset-xl-1 col-lg-10 offset-lg-1">
            <div class="main_attending_area">
              <div class="flower_1 d-none d-lg-block">
                <img src="{{ base_url }}/akbar/img/appointment/flower-top.png" alt="">
              </div>
              <div class="flower_2 d-none d-lg-block">
                <img src="{{ base_url }}/akbar/img/appointment/flower-bottom.png" alt="">
              </div>
              <div class="row justify-content-center">
                <div class="col-xl-7 col-lg-8">
                  <div class="popup_box ">
                    <div class="popup_inner">
                      <div class="form_heading text-center">
                        <h3>Are You Attending?</h3>
                        {# <p>Kindly respond before 30 August</p> #}
                      </div>
                      <form action="{{ store_url }}" method="post">
                        <input type="hidden" name="_csrf" value="{{ csrf_token }}">
                        <div class="row">
                          <div class="col-xl-12">
                            <input type="text" id="name" value="{{ guest.name }}" placeholder="Your Name" readonly="readonly">
                          </div>
                          <div class="col-xl-12">
                            <select class="form-select wide" name="presence_status" id="default-select" class="">
                              <option data-display="Hadir">Hadir</option>
                              <option value="0">Tidak Hadir</option>
                            </select>
                          </div>
                          <div class="col-xl-12">
                            <textarea name="content" id="content" placeholder="Additional Message"></textarea>
                          </div>
                          <div class="col-xl-12">
                            <button type="submit" class="boxed_btn3">R.S.V.P</button>
                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- / attend_area -->

    <!-- ================ contact section start ================= -->
    {% for location in locations %}
      <section class="location_area" style="margin-top: 30px;">
        <div class="location_info">
          <div class="location_inner">
            <div class="location_top text-center">
              <h3>{{ location.name }}</h3>
              <p>{{ location.address }}<br>
                <a href="{{ location.google_map.url }}" target="_blank">
                  <span>Google Maps</span>
                </a>
              </p>
            </div>
          </div>
        </div>
        <div class="container-fluid p-0">
          <div id="map-{{ loop.index }}" style="height: 480px; position: relative; overflow: hidden;">
            <iframe
                id="gmap_canvas"
                src="{{ location.google_map.embed_url }}"
                width="100%"
                height="480px"
                frameborder="0"
                scrolling="no"
                marginheight="0"
                marginwidth="0"
              ></iframe>
          </div>
        </div>
      </section>
    {% endfor %}
    <!-- ================ contact section end ================= -->

