<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" value="{{ csrf_token }}">
    <title>{{ event.description }}</title>
    <meta name="description" content="{{ description }}">
    <meta name="theme-color" content="#7d9a9b" />
    <meta property="og:locale" content="id_ID">
    <meta property="og:type" content="article">
    <meta property="og:title" content="{{ event.description }}">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:url" content="{{ current_url }}">
    <meta property="og:site_name" content="{{ event.description }}">
    <meta property="og:updated_time" content="{{ updated_at }}">
    <meta property="og:image" content="{{ base_url }}/{{ thumbnail_image_path }}">
    <meta property="og:image:secure_url" content="{{ base_url }}/{{ thumbnail_image_path }}">
    <meta property="og:image:width" content="{{ thumbnail_image_width }}">
    <meta property="og:image:height" content="{{ thumbnail_image_height }}">
    <meta property="og:image:alt" content="{{ event.description }}">
    <meta property="og:image:type" content="{{ thumbnail_image_mime_type }}">
    <meta property="article:published_time" content="{{ created_at }}">
    <meta property="article:modified_time" content="{{ updated_at }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ event.description }}">
    <meta name="twitter:description" content="{{ description }}">
    <meta name="twitter:image" content="{{ base_url }}/{{ thumbnail_image_path }}">
    <link rel="stylesheet" href="{% block cssPath %}{% endblock %}">
    <link rel="icon" href="{{ base_url }}/{{ icon_path }}" />
  </head>
  <body>
    <div class="layout-cover">
      <div class="wrapper">
        <div class="separator">
          <div class="main-img">
            <div id="particles-js"></div>
          </div>

          <div class="main-title">
            <div class="top-title">
              <span
                class="wedding-title font-black animated-title"
                style="text-align: center; line-height: 100px;"
              >
                {{ subtitle }}
                <p>&nbsp;</p>
                <img src="{{ base_url }}/{{ logo_path }}" style="width: 35vh;" />
              </span>
            </div>
            <div class="bottom-title">
              <button class="wedding-open animated-title" style="opacity: 0;">
                Buka Undangan
              </button>
              <span class="title-head font-black animated-title">
                {{ date_dmy }}
              </span>
            </div>
          </div>

          {% if useMusic %}
            <a target="_self" class="music-control add-shadow off" style="cursor: pointer;">
              <img src="{{ base_url }}/img/5y6RfR9dpR043awCuBiXCRXIo2S7DM8SzUbuHYoVkEw=.svg" class="sound-on" alt="icon-sound">
              <img src="{{ base_url }}/img/jwgNsdVvbg2RP30YnTyLO4GWPdl053yOVDxnJSxvYCA=.svg" class="sound-off" alt="icon-sound-off">
            </a>
            <audio id="background_music" loop="loop" src="{{ base_url }}/hd63M.mp3"></audio>
          {% endif %}

